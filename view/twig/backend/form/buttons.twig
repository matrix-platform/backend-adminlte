{% for button in buttons %}
    {% set class = cfg("backend.button-#{button.type}") ?: 'btn btn-default' %}
    {% if button.type == 'cancel' %}
        <button class="{{ class }}" data-{% if backward is defined %}backward="{{ backward }}"{% else %}dismiss="modal"{% endif %}>
            {{ label(button.i18n ?: "backend.#{button.type}") }}
        </button>
    {% else %}
        {% set href = "#{path}/#{button.method ?: button.type}" %}
        <button class="{{ class }}" data-ajax="{{ href }}{{ data.id ? "/#{data.id}" }}" data-form="#_{{ formId }}">
            {{ label(button.i18n ?: "backend.#{button.type}") }}
        </button>
    {% endif %}
{% endfor %}
