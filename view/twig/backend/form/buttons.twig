{% for type, button in buttons %}
    {% set class = cfg("backend.button-#{type}") ?: 'btn btn-default' %}
    {% if type == 'cancel' %}
        <button class="{{ class }} rounded-0" data-{% if backward is defined %}backward="{{ backward }}"{% else %}dismiss="modal"{% endif %}>
            {{ label(button.i18n ?: "backend.#{type}") }}
        </button>
    {% else %}
        {% set path = include(template_from_string(button.path), data, false) %}
        <button class="{{ class }} rounded-0" data-ajax="{{ path }}" data-form="#_{{ formId }}">
            {{ label(button.i18n ?: "backend.#{type}") }}
        </button>
    {% endif %}
{% endfor %}
