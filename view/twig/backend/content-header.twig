<div class="row">
    <div class="col-md-6">
        <h3>
            {% block title %}
                {{ title }}
                {% if description %}
                    <span class="font-weight-normal h6 ml-2 text-secondary">
                        {{ description }}
                    </span>
                {% endif %}
            {% endblock %}
        </h3>
    </div>
    <div class="col-md-6">
        <ol class="breadcrumb float-md-right p-2 rounded-0">
            {% for node in breadcrumbs %}
                {% if node.path %}
                    {% if loop.last %}
                        <li class="active breadcrumb-item" data-menu="{{ node.path }}">
                            {{ node.subtitle ?: label(node.i18n) }}
                        </li>
                    {% else %}
                        <li class="breadcrumb-item" data-menu="{{ node.path }}">
                            <a data-ajax href="{{ node.path }}">
                                {{ node.subtitle ?: label(node.i18n) }}
                            </a>
                        </li>
                    {% endif %}
                {% else %}
                    <li class="breadcrumb-item">
                        {{ node.subtitle ?: label(node.i18n) }}
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </div>
</div>
